---
import BaseLayout from "./base/Layout.astro";
import Header from "./base/navbar/Common.astro";
import { SITE_DESCRIPTION } from "@config";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title} description={SITE_DESCRIPTION}>
  <Header
    title="逸码 V20"
    base={import.meta.env.BASE_URL + "V20"}
    headerItems={[
      {
        label: "训练",
        url: import.meta.env.BASE_URL + "V20/zigen",
        chidren: [
          { label: "字根训练", url: import.meta.env.BASE_URL + "V20/zigen" },
          { label: "单字训练", url: import.meta.env.BASE_URL + "V20/danzi" },
        ],
      },
      { label: "查询", url: import.meta.env.BASE_URL + "V20/search" },
    ]}
  />
  <slot />
</BaseLayout>
